---
# Only the main Sass file needs front matter (the dashes are enough)
---

@import "minima";

/* Custom styles for sticky profile layout */
:root {
  --primary-color: #2c3e50;
  --accent-color: #3498db;
  --text-color: #2c3e50;
  --text-light: #6c757d;
  --background: #ffffff;
  --background-light: #f8f9fa;
  --border-color: #e9ecef;
  --link-color: #3498db;
  --link-hover: #2980b9;
}

/* Override Jekyll theme styles */
.wrapper {
  max-width: none;
  margin: 0;
  padding: 0;
}

.page-content {
  padding: 0;
}

/* Basic styling */
h1, h2, h3, h4, h5, h6 {
  color: var(--primary-color);
}

a {
  color: var(--link-color);
  text-decoration: none;
}

a:hover {
  color: var(--link-hover);
  text-decoration: underline;
}

.content-section {
  margin-bottom: 3rem;
  padding-bottom: 2rem;
  border-bottom: 1px solid var(--border-color);
}

.content-section h2 {
  font-size: 2rem;
  font-weight: 600;
  color: var(--primary-color);
  margin: 0 0 1.5rem 0;
  border-bottom: 2px solid var(--border-color);
  padding-bottom: 0.5rem;
}
